<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RecipeDetailsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RecipeDetailsFragmentElementTheme" >
        <item name="android:layout_marginTop">@dimen/recipe_details_fragment_element_margin</item>
        <item name="android:layout_marginLeft">@dimen/recipe_details_fragment_element_margin</item>
        <item name="android:layout_marginRight">@dimen/recipe_details_fragment_element_margin</item>
    </style>

</resources>
